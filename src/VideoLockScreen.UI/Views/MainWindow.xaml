<Window x:Class="VideoLockScreen.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Video Lock Screen Configuration"
        Width="1000" Height="700"
        MinWidth="800" MinHeight="600"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource ModernWindowStyle}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Image Source="../Resources/icon.png" Width="32" Height="32" Margin="0,0,10,0"/>
                    <TextBlock Text="Video Lock Screen" 
                               FontSize="20" FontWeight="Bold" 
                               Foreground="White" 
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="Settings" Style="{StaticResource HeaderButtonStyle}" 
                            Command="{Binding OpenSettingsCommand}" Margin="0,0,10,0"/>
                    <ToggleButton Content="Enable" Style="{StaticResource EnableToggleStyle}"
                                  IsChecked="{Binding IsEnabled}" 
                                  Command="{Binding ToggleEnabledCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <TabControl Grid.Row="1" Style="{StaticResource ModernTabControlStyle}">
            
            <!-- Video Selection Tab -->
            <TabItem Header="Video Selection" Style="{StaticResource ModernTabItemStyle}">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Video Selection Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" 
                                   Text="Select video files for your lock screen" 
                                   FontSize="16" FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Content="Browse Videos" 
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Command="{Binding BrowseVideosCommand}" 
                                    Margin="0,0,10,0"/>
                            <Button Content="Add Folder" 
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Command="{Binding AddFolderCommand}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Video List -->
                    <Border Grid.Row="1" Style="{StaticResource CardBorderStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Video Files List -->
                            <ListBox Grid.Column="0" 
                                     ItemsSource="{Binding VideoFiles}"
                                     SelectedItem="{Binding SelectedVideo}"
                                     Style="{StaticResource ModernListBoxStyle}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Thumbnail -->
                                            <Border Grid.Column="0" 
                                                    Background="{StaticResource BackgroundBrush}"
                                                    Width="80" Height="60" 
                                                    CornerRadius="4" Margin="0,0,15,0">
                                                <Image Source="{Binding ThumbnailPath}" 
                                                       Stretch="UniformToFill"/>
                                            </Border>

                                            <!-- Video Info -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding FileName}" 
                                                           FontWeight="SemiBold" FontSize="14"/>
                                                <TextBlock Text="{Binding Duration}" 
                                                           Foreground="{StaticResource SecondaryTextBrush}"
                                                           FontSize="12" Margin="0,2,0,0"/>
                                                <TextBlock Text="{Binding Resolution}" 
                                                           Foreground="{StaticResource SecondaryTextBrush}"
                                                           FontSize="12"/>
                                            </StackPanel>

                                            <!-- Actions -->
                                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                                <Button Content="ðŸ”" Style="{StaticResource IconButtonStyle}"
                                                        Command="{Binding DataContext.PreviewVideoCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                        CommandParameter="{Binding}"
                                                        ToolTip="Preview Video"/>
                                                <Button Content="âŒ" Style="{StaticResource IconButtonStyle}"
                                                        Command="{Binding DataContext.RemoveVideoCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                        CommandParameter="{Binding}"
                                                        ToolTip="Remove Video"
                                                        Margin="5,0,0,0"/>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <!-- Preview Panel -->
                            <Border Grid.Column="1" Style="{StaticResource CardBorderStyle}" Margin="10,0,0,0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Text="Preview" 
                                               FontWeight="SemiBold" FontSize="14"
                                               Margin="15,15,15,10"/>

                                    <!-- Video Preview -->
                                    <Border Grid.Row="1" Background="Black" Margin="15,0">
                                        <MediaElement Name="PreviewPlayer"
                                                      Source="{Binding SelectedVideoPath}"
                                                      LoadedBehavior="Manual"
                                                      UnloadedBehavior="Stop"
                                                      Stretch="Uniform"/>
                                    </Border>

                                    <!-- Preview Controls -->
                                    <StackPanel Grid.Row="2" Orientation="Horizontal" 
                                                HorizontalAlignment="Center" Margin="15">
                                        <Button Content="â–¶ï¸" Style="{StaticResource IconButtonStyle}"
                                                Command="{Binding PlayPreviewCommand}" Margin="0,0,5,0"/>
                                        <Button Content="â¸ï¸" Style="{StaticResource IconButtonStyle}"
                                                Command="{Binding PausePreviewCommand}" Margin="0,0,5,0"/>
                                        <Button Content="â¹ï¸" Style="{StaticResource IconButtonStyle}"
                                                Command="{Binding StopPreviewCommand}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Quick Actions -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" 
                                HorizontalAlignment="Right" Margin="0,20,0,0">
                        <Button Content="Test Lock Screen" 
                                Style="{StaticResource SecondaryButtonStyle}"
                                Command="{Binding TestLockScreenCommand}" 
                                Margin="0,0,10,0"/>
                        <Button Content="Apply Settings" 
                                Style="{StaticResource PrimaryButtonStyle}"
                                Command="{Binding ApplySettingsCommand}"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Monitor Configuration Tab -->
            <TabItem Header="Display Settings" Style="{StaticResource ModernTabItemStyle}">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="Configure display and monitor settings" 
                               FontSize="16" FontWeight="SemiBold" Margin="0,0,0,20"/>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            
                            <!-- Monitor Selection -->
                            <Border Style="{StaticResource CardBorderStyle}" Margin="0,0,0,20">
                                <StackPanel Margin="20">
                                    <TextBlock Text="Monitor Configuration" 
                                               FontWeight="SemiBold" FontSize="14" Margin="0,0,0,15"/>
                                    
                                    <CheckBox Content="Show on all monitors" 
                                              IsChecked="{Binding ShowOnAllMonitors}"
                                              Style="{StaticResource ModernCheckBoxStyle}"
                                              Margin="0,0,0,10"/>
                                    
                                    <ItemsControl ItemsSource="{Binding ConnectedMonitors}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Style="{StaticResource SubCardBorderStyle}" Margin="0,5">
                                                    <Grid Margin="15">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <CheckBox Grid.Column="0" 
                                                                  IsChecked="{Binding IsEnabled}"
                                                                  VerticalAlignment="Center" Margin="0,0,15,0"/>

                                                        <StackPanel Grid.Column="1">
                                                            <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold"/>
                                                            <TextBlock Text="{Binding Resolution}" 
                                                                       Foreground="{StaticResource SecondaryTextBrush}" FontSize="12"/>
                                                        </StackPanel>

                                                        <ComboBox Grid.Column="2" 
                                                                  SelectedItem="{Binding VideoFile}"
                                                                  ItemsSource="{Binding DataContext.VideoFiles, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                  Width="200"
                                                                  Style="{StaticResource ModernComboBoxStyle}"/>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>

                            <!-- Video Settings -->
                            <Border Style="{StaticResource CardBorderStyle}">
                                <StackPanel Margin="20">
                                    <TextBlock Text="Video Playback Settings" 
                                               FontWeight="SemiBold" FontSize="14" Margin="0,0,0,15"/>
                                    
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Scaling Mode:" 
                                                   VerticalAlignment="Center" Margin="0,0,20,15"/>
                                        <ComboBox Grid.Row="0" Grid.Column="1" 
                                                  SelectedItem="{Binding ScalingMode}"
                                                  Style="{StaticResource ModernComboBoxStyle}"
                                                  Margin="0,0,0,15">
                                            <ComboBoxItem Content="Stretch to Fill"/>
                                            <ComboBoxItem Content="Fit to Screen"/>
                                            <ComboBoxItem Content="Center"/>
                                            <ComboBoxItem Content="Tile"/>
                                        </ComboBox>

                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Loop Count:" 
                                                   VerticalAlignment="Center" Margin="0,0,20,15"/>
                                        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,15">
                                            <Slider Value="{Binding LoopCount}" Minimum="-1" Maximum="10" 
                                                    Width="200" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding LoopCountText}" 
                                                       VerticalAlignment="Center" Margin="10,0,0,0"/>
                                        </StackPanel>

                                        <CheckBox Grid.Row="2" Grid.Column="1" 
                                                  Content="Enable Audio" 
                                                  IsChecked="{Binding AudioEnabled}"
                                                  Style="{StaticResource ModernCheckBoxStyle}"
                                                  Margin="0,0,0,15"/>

                                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Volume:" 
                                                   VerticalAlignment="Center" Margin="0,0,20,0"
                                                   Visibility="{Binding AudioEnabled, Converter={StaticResource BoolToVisibility}}"/>
                                        <Slider Grid.Row="3" Grid.Column="1" 
                                                Value="{Binding Volume}" Minimum="0" Maximum="1" 
                                                Width="200" HorizontalAlignment="Left"
                                                Visibility="{Binding AudioEnabled, Converter={StaticResource BoolToVisibility}}"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <!-- Status Tab -->
            <TabItem Header="Status" Style="{StaticResource ModernTabItemStyle}">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="System Status and Information" 
                               FontSize="16" FontWeight="SemiBold" Margin="0,0,0,20"/>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            
                            <!-- Service Status -->
                            <Border Style="{StaticResource CardBorderStyle}" Margin="0,0,0,20">
                                <StackPanel Margin="20">
                                    <TextBlock Text="Service Status" 
                                               FontWeight="SemiBold" FontSize="14" Margin="0,0,0,15"/>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Ellipse Grid.Column="0" 
                                                 Width="12" Height="12" 
                                                 Fill="{Binding ServiceStatusColor}"
                                                 VerticalAlignment="Center" Margin="0,0,10,0"/>

                                        <TextBlock Grid.Column="1" 
                                                   Text="{Binding ServiceStatusText}"
                                                   VerticalAlignment="Center"/>

                                        <Button Grid.Column="2" 
                                                Content="{Binding ServiceActionText}"
                                                Style="{StaticResource SecondaryButtonStyle}"
                                                Command="{Binding ServiceActionCommand}"/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- System Information -->
                            <Border Style="{StaticResource CardBorderStyle}">
                                <StackPanel Margin="20">
                                    <TextBlock Text="System Information" 
                                               FontWeight="SemiBold" FontSize="14" Margin="0,0,0,15"/>
                                    
                                    <ItemsControl ItemsSource="{Binding SystemInfo}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="0,5">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="150"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Text="{Binding Key}" FontWeight="SemiBold"/>
                                                    <TextBlock Grid.Column="1" Text="{Binding Value}"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <!-- Lock Screen Control Tab -->
            <TabItem Header="Lock Screen Control" Style="{StaticResource ModernTabItemStyle}">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Lock Screen Header -->
                    <TextBlock Grid.Row="0" 
                               Text="Lock Screen Control" 
                               FontSize="16" FontWeight="SemiBold"
                               Margin="0,0,0,20"/>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel>

                            <!-- Current Status -->
                            <Border Style="{StaticResource CardBorderStyle}" Margin="0,0,0,20">
                                <StackPanel Margin="20">
                                    <TextBlock Text="Current Status" 
                                               FontWeight="SemiBold" FontSize="14" Margin="0,0,0,15"/>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Ellipse Grid.Column="0" 
                                                 Width="12" Height="12" 
                                                 Fill="{Binding LockScreenStatusColor}"
                                                 VerticalAlignment="Center" Margin="0,0,10,0"/>

                                        <TextBlock Grid.Column="1" 
                                                   Text="{Binding LockScreenStatusText}"
                                                   FontWeight="SemiBold"
                                                   VerticalAlignment="Center"/>

                                        <Button Grid.Column="2" 
                                                Content="{Binding ActivationButtonText}"
                                                Style="{StaticResource PrimaryButtonStyle}"
                                                Command="{Binding ActivateLockScreenCommand}"/>
                                    </Grid>

                                    <TextBlock Text="{Binding LockScreenStatusMessage}" 
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               Margin="0,10,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Quick Actions -->
                            <Border Style="{StaticResource CardBorderStyle}" Margin="0,0,0,20">
                                <StackPanel Margin="20">
                                    <TextBlock Text="Quick Actions" 
                                               FontWeight="SemiBold" FontSize="14" Margin="0,0,0,15"/>
                                    
                                    <UniformGrid Columns="2" HorizontalAlignment="Left">
                                        <Button Content="Test Lock Screen" 
                                                Style="{StaticResource SecondaryButtonStyle}"
                                                Command="{Binding TestLockScreenCommand}" 
                                                Margin="0,0,10,10"/>
                                        
                                        <Button Content="Emergency Exit" 
                                                Style="{StaticResource SecondaryButtonStyle}"
                                                Command="{Binding DeactivateLockScreenCommand}" 
                                                Margin="0,0,0,10"/>
                                    </UniformGrid>
                                </StackPanel>
                            </Border>

                            <!-- Hotkey Information -->
                            <Border Style="{StaticResource CardBorderStyle}" Margin="0,0,0,20">
                                <StackPanel Margin="20">
                                    <TextBlock Text="Global Hotkeys" 
                                               FontWeight="SemiBold" FontSize="14" Margin="0,0,0,15"/>
                                    
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="200"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Quick Activation:" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Column="1" Text="Ctrl + Alt + L" FontFamily="{StaticResource MonospaceFont}"/>
                                    </Grid>
                                    
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="200"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Emergency Exit:" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Column="1" Text="Ctrl + Alt + Shift + F12" FontFamily="{StaticResource MonospaceFont}"/>
                                    </Grid>

                                    <TextBlock Text="Note: Emergency exit is also available by holding Ctrl+Alt+Shift+Esc for 3 seconds while lock screen is active."
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               TextWrapping="Wrap"
                                               Margin="0,10,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Active Video Information -->
                            <Border Style="{StaticResource CardBorderStyle}"
                                    Visibility="{Binding IsLockScreenActive, Converter={StaticResource BoolToVisibility}}">
                                <StackPanel Margin="20">
                                    <TextBlock Text="Active Video" 
                                               FontWeight="SemiBold" FontSize="14" Margin="0,0,0,15"/>
                                    
                                    <Grid Margin="0,5" Visibility="{Binding SelectedVideo, Converter={StaticResource BoolToVisibility}}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="File:" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Column="1" Text="{Binding SelectedVideo.FileName}" TextTrimming="CharacterEllipsis"/>
                                    </Grid>
                                    
                                    <Grid Margin="0,5" Visibility="{Binding SelectedVideo, Converter={StaticResource BoolToVisibility}}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Duration:" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Column="1" Text="{Binding SelectedVideo.Duration}"/>
                                    </Grid>
                                    
                                    <Grid Margin="0,5" Visibility="{Binding SelectedVideo, Converter={StaticResource BoolToVisibility}}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Resolution:" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Column="1" Text="{Binding SelectedVideo.Resolution}"/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Footer -->
        <Border Grid.Row="2" Background="{StaticResource BackgroundBrush}" Padding="20,10" 
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="{Binding StatusMessage}"
                           VerticalAlignment="Center"
                           Foreground="{StaticResource SecondaryTextBrush}"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Minimize to Tray" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding MinimizeToTrayCommand}" 
                            Margin="0,0,10,0"/>
                    <Button Content="Close" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding CloseCommand}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
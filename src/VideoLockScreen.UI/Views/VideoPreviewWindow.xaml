<Window x:Class="VideoLockScreen.UI.Views.VideoPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Video Preview" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource WindowBackgroundBrush}">
    
    <Window.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Video Display Area -->
        <Border Grid.Row="0" 
                Background="Black" 
                BorderBrush="{DynamicResource BorderBrush}" 
                BorderThickness="1"
                Margin="10">
            <Grid>
                <!-- Video MediaElement -->
                <MediaElement x:Name="VideoPlayer"
                            LoadedBehavior="Manual"
                            UnloadedBehavior="Stop"
                            Stretch="Uniform"
                            MediaOpened="VideoPlayer_MediaOpened"
                            MediaEnded="VideoPlayer_MediaEnded"
                            MediaFailed="VideoPlayer_MediaFailed"/>
                
                <!-- Loading Indicator -->
                <TextBlock x:Name="LoadingText"
                          Text="Loading video..."
                          Foreground="White"
                          FontSize="16"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Visibility="Collapsed"/>
                
                <!-- Error Message -->
                <TextBlock x:Name="ErrorText"
                          Foreground="Red"
                          FontSize="14"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          TextWrapping="Wrap"
                          Visibility="Collapsed"/>
            </Grid>
        </Border>
        
        <!-- Progress Bar and Time -->
        <Grid Grid.Row="1" Margin="10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock x:Name="CurrentTimeText" 
                      Grid.Column="0"
                      Text="00:00"
                      VerticalAlignment="Center"
                      Foreground="{DynamicResource TextPrimaryBrush}"
                      Margin="0,0,10,0"/>
            
            <Slider x:Name="ProgressSlider"
                   Grid.Column="1"
                   Minimum="0"
                   Maximum="100"
                   Value="0"
                   VerticalAlignment="Center"
                   ValueChanged="ProgressSlider_ValueChanged"
                   Style="{StaticResource ModernSliderStyle}"/>
            
            <TextBlock x:Name="DurationText"
                      Grid.Column="2"
                      Text="00:00"
                      VerticalAlignment="Center"
                      Foreground="{DynamicResource TextPrimaryBrush}"
                      Margin="10,0,0,0"/>
        </Grid>
        
        <!-- Control Buttons -->
        <StackPanel Grid.Row="2" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Center"
                   Margin="10">
            
            <Button x:Name="PlayButton" 
                   Content="Play"
                   Click="PlayButton_Click"/>
            
            <Button x:Name="PauseButton" 
                   Content="Pause"
                   Click="PauseButton_Click"
                   IsEnabled="False"/>
            
            <Button x:Name="StopButton" 
                   Content="Stop"
                   Click="StopButton_Click"
                   IsEnabled="False"/>
            
            <Separator Width="20" Visibility="Hidden"/>
            
            <TextBlock Text="Volume:"
                      VerticalAlignment="Center"
                      Foreground="{DynamicResource TextPrimaryBrush}"
                      Margin="0,0,5,0"/>
                      
            <Slider x:Name="VolumeSlider"
                   Width="100"
                   Minimum="0"
                   Maximum="1"
                   Value="0.5"
                   VerticalAlignment="Center"
                   ValueChanged="VolumeSlider_ValueChanged"
                   Style="{StaticResource ModernSliderStyle}"/>
            
            <Separator Width="20" Visibility="Hidden"/>
            
            <Button Content="Close" 
                   Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>